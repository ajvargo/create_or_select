<h1>Posts#index</h1>
<p>The contents attribute isn't shown on purpose.</p>
<p><%= link_to "Create New Post", new_post_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
  </tr>
  <% for post in @posts do %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.category.name %></td>
    </tr>
  <% end %>
</table>
